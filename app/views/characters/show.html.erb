  <h1>
  <%= @character.name %>
  </h1>
  <%= @house %><br>
  <%= @familiar %>
  <% if @character.wand %>
    <div class="field">
      <h1>Wand:</h1>
      <%= label_tag "Core Material: "%>
      <%= @character.wand.core.material %>
    </div>
    <div class="field">
      <%= label_tag "Wood Type: "%>
      <%= @character.wand.wood.name %>
    </div>
  <% else %>
    <div class="field">
      <%= link_to  "Choose your wand", new_character_wand_path(@character) %>
    </div>
  <% end %>

  <% if @character.spells %>
  <h1>Spells:</h1>
    <% @character.spells.each do |spell| %>
    <div class="field">
      <%= link_to spell.name, character_spell_path(@character, spell) %>
    </div>
    <% end %>
    <%= link_to  "Learn New Spells", spells_path + "/?char_id=" + @character.id.to_s %>
  <% end %>
