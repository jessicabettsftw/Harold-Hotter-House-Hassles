<% if flash[:message] %>
  <div class="notification is-<%= flash[:type] %>">
    <button class="delete"></button>
    <% if flash[:message].class == Array %>
      <% flash[:message].each do |message| %>
       <%= message %><br />
       <% end %>
    <% else %>
      <%= flash[:message] %>
    <% end %>
  </div>
<% end %>