<div class="columns">
  <div class="column is-half">
    <%= form_for([@familiar], {url: character_familiar_path(@familiar)}) do |f| %>
    <div class="field">
      <%= f.label :familiar_id, "Species", class: "label" %>
      <div class="control">
        <div class="select">
          <%= f.collection_select :familiar_id, Familiar.all, :id, :species %>
        </div>
      </div>
    </div>

    <div class="field">
      <%= f.label :name, "Name", class: "label" %>
      <div class="control">
          <%= f.text_field :name, class: "input" %>
      </div>
    </div>

    <div class="field">
      <%= f.submit class: "button bg-medium-blue text-robins-egg" %>
    </div>
    
    <% end %>
  </div>
</div>
