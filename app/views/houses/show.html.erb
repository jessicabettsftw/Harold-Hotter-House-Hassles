
<div class="columns">
    
    <div class="column">
      <h1 class="is-size-1"><%= @house.name %></h1>
      <ul>
        <li>House Points: <%= @house.calculate_points %></li>
        <li>Sigil: <%= @house.sigil %></li>
        <li>Founder: <%= @house.founder %></li>
        <li>Head of House: <%= @house.head_of_house %></li>
        <li>Values: <%= @house.display_values %></li>
        <li>Colors: <%= @house.display_colors %></li>
      </ul>
    </div>
    
    <div class="column">
      <img src="<%= @house.img_url %>" >
    </div>
</div>