<%= form_for([@wand], {url: character_wand_path(@wand)}) do |f| %>
  <div class="field">
    <%= f.label :core, "Choose a core" %>
    <div class="select">
      <%= f.collection_select :core_id, @cores, :id, :material %>
    </div>
  </div>
  <div class="field">
    <%= f.label :wood, "Choose wood type"%>
    <div class="select">
      <%= f.collection_select :wood_id, @woods, :id, :name %>
    </div>
  </div>
  <%= f.submit class: "button"%>
<% end %>
