<h1 class="is-size-1"><%= @spell.name %></h1>
<div class="field">
  <%= form_for([@spell], {url: test_spell_path, method: :post}) do |x| %>
  
    <div class="field">
        <%= x.label :category, "Category", class: "label" %>
        <div class="select">
          <%= x.collection_select :category, @categories, :category, :category, :selected => @categories.first.category.to_s%>    
        </div>
    </div>

    <div class="field">
      <%= x.label :effect, "Effect", class: "label" %>
      <div class="select">
        <%= x.collection_select :effect, @spells_effects, :effect, :effect, :selected => @spells_effects.first.effect.to_s %>
      </div>
    </div>

    <div class="field">
      <%= x.submit "Finish Spell Test", class: "button" %>
    </div>
  <% end %>
</div>
