<h1><%= @spell.name %></h1>
<div class="field">
<%= @spell.category %>
</div>
<div class="field">
<%= @spell.effect %>
</div>

<% if @spell.learned?(@character) %>
  <%= form_for([@spell], {url: character_spell_path, method: :delete}) do |x| %>
    <%= x.submit "Forget Spell", class: "button" %>
  <% end %>
<% else %>
  <%# end %>
  <%= form_for([@spell], {url: take_test_spell_path, method: :get}) do |x| %>
    <%= x.submit "Test Spell Knowledge", class: "button" %>
  <% end %>
<% end %>
